@model mvc_ef_codefirst_sample.Models.Adresler
@{
    ViewBag.Title = "Sil";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Secilen adresi sil</h2>
<hr />
<p>
    Aşagıdaki adres kaydını silmek istediğinize emin misiniz??
</p>

<table>
    <tr>
        <td>Kişi :</td>
        <td>@Model.Kisi.Ad</td>
    </tr>
    <tr>
        <td>Adresi :</td>
        <td>@Model.AdresTanim</td>
    </tr>
</table>
<br />
@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.ID)
    <div class="input-group">
        <input type="submit" value="Sil" class="btn btn-success" />
    </div>
    <br />
}
